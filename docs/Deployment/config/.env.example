# ===========================================
# AFC Odoo + N8N Production Environment
# ===========================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control
#
# Generate encryption key: openssl rand -hex 16

# ===========================================
# PostgreSQL Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_ROOT_PASSWORD=<GENERATE_STRONG_PASSWORD>
POSTGRES_DB=n8n_production
POSTGRES_NON_ROOT_USER=n8n_user
POSTGRES_NON_ROOT_PASSWORD=<GENERATE_STRONG_PASSWORD>

# ===========================================
# N8N Configuration
# ===========================================
# CRITICAL: Generate with: openssl rand -hex 16
N8N_ENCRYPTION_KEY=<GENERATE_WITH_OPENSSL>

# Host configuration
N8N_HOST=n8n.yourdomain.com
N8N_PORT=5678
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.yourdomain.com/

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=<GENERATE_STRONG_PASSWORD>

# ===========================================
# Timezone Configuration
# ===========================================
GENERIC_TIMEZONE=Asia/Manila
TZ=Asia/Manila

# ===========================================
# Queue Configuration
# ===========================================
EXECUTIONS_MODE=queue

# ===========================================
# Security Configuration
# ===========================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=<GENERATE_STRONG_PASSWORD>

# ===========================================
# Odoo API Configuration
# ===========================================
ODOO_API_URL=https://odoo.yourdomain.com
ODOO_API_KEY=<YOUR_ODOO_API_KEY>
ODOO_DB=production

# ===========================================
# External Services
# ===========================================
# BIR eFPS API (if applicable)
EBIR_API_URL=https://efps.bir.gov.ph/api
EBIR_TIN=<YOUR_COMPANY_TIN>

# Slack Webhook (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ

# ===========================================
# Backup Configuration
# ===========================================
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=<YOUR_AWS_KEY>
AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET>
AWS_REGION=ap-southeast-1

# ===========================================
# Monitoring (Optional)
# ===========================================
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=<GENERATE_STRONG_PASSWORD>
